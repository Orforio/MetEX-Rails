<p id="notice"><%= notice %></p>

<h1>Listing Movements</h1>

<table>
  <thead>
    <tr>
      <th>Up station</th>
      <th>Down station</th>
      <th>Up allowed</th>
      <th>Down allowed</th>
      <th>Length</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movements.each do |movement| %>
      <tr>
        <td><%= movement.up_station_id %></td>
        <td><%= movement.down_station_id %></td>
        <td><%= movement.up_allowed %></td>
        <td><%= movement.down_allowed %></td>
        <td><%= movement.length %></td>
        <td><%= link_to 'Show', movement %></td>
        <td><%= link_to 'Edit', edit_movement_path(movement) %></td>
        <td><%= link_to 'Destroy', movement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

