<% content_for :title, "(#{@station.line.name}) #{@station.name}" %>
<p id="notice"><%= notice %></p>
<div class="jumbotron line-<%= @station.line.id %>">
	<div class="container">
		<h1><!--?php echo $this->LineBadge->addLineBadge($station['Line']['name']); ?--> <%= @station.name %></h1>
	</div>
</div>
<div class="container-fluid line-<%= @station.line.id %>">
	<div class="row">
		<div class="col-sm-6">
			<%= render partial: 'up_movement', collection: @up_movements %>
		</div>
		<div class="col-sm-6">
			<%= render partial: 'down_movement', collection: @down_movements %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-8" id="content-station-photos">
			<!--?php echo $this->Image->addStationSlideshow($station['Image']); ?-->Photo
		</div>
		<div class="col-md-4" id="content-station-description">
			<!--?php echo $this->Sound->addStationsAmbience($station['Sound']); ?-->
			<p><%= @station.description %></p>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6" id="nav-station-connections">
			<h2>Connections</h2>
			<% if @connections %>
				<ul>
					<%= render partial: 'connection', collection: @connections %>
				</ul>
			<% else %>
				<p>No connections</p>
			<% end %>
		</div>
		<div class="col-sm-6" id="nav-station-places">
			<h2>Places</h2>
			<!--?php echo $this->Navigation->addPlacesList($station['Place']); ?-->Not yet implemented
		</div>
	</div>
</div>
